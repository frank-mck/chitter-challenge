<h1>Chitter Chat</h1>
Welcome <%= @username %>
<form action ='/tweets' method ='get'>
<input type = 'text' name ='tweet' placeholder= 'Enter tweet here...'>
<input type ='submit' value ='Tweet'/>
</form>

<form action ='/index' method ='post'>
<input type = 'submit' name ='view_mine' value='View my tweets'>
</form>

<form action ='/all' method ='post'>
<input type = 'submit' name ='view_all' value='View all tweets'>
</form>

<form action = '/users/new' method = 'get'>
<input type = 'submit' name ='user' value ='Sign up'>
</form>

<form action = '/sessions/destroy' method = 'post'>
<input type = 'submit' name ='logout' value ='Log out'>
</form>


<% if params[:view_all] %>
<% @chitter.each do |tweet| %>
<div class ='tweet'>
<%= tweet.user_id %> <br>
<%= tweet.tweet %> <%= tweet.time %> 
</div>
<% end %>
<% end %>

<% if params[:view_mine] %>
<% @chitter.each do |tweet| %>
<div class ='tweet'>
<%= @username %> <br>
<%= tweet.tweet %> <%= tweet.time %> 
</div>
<% end %>
<% end %>

<style>

body {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

input {
  padding: 10px;
}

.tweet {
  display: flex;
  flex-direction: column;
  padding: 10px;
}